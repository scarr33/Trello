<div
data-controller="modal"
id="modal-wrapper"
class="hidden relative z-10"
aria-labelledby="modal-title"
role="dialog"
aria-modal="true">
    <div class="hidden" id="show-modal-div" data-action="click->modal#showModal"></div>
    <!--
    Background .backdrop, show/hide based on modal state.

    Entering: "ease-out duration-300"
    From: "opacity-0"
    To: "opacity-100"
    Leaving: "ease-in duration-200"
    .From: "opacity-100"
    To: "opacity-0"
    -->
    <div
        id="modal-backdrop"
        class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
        data-transition-enter="ease-out duration-300"
        data-transition-enter-start="opacity-0"
        data-transition-enter-end="opacity-100"
        data-transition-leave="ease-in duration-200"
        data-transition-leave-start="opacity-100"
        data-transition-leave-end="opacity-0"
    ></div>

    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end sm:items-center justify-center min-h-full p-4 text-center sm:p-0" >
            <div
                id="modal-panel"
                class="hiddlen relative bg-white w-1/3 rounded-lg px-5 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all"
                data-transition-enter="ease-out duration-300"
                data-tansition-enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                data-tansition-enter-end="opacity-100 translate-y-0 sm:scale-100"
                data-transition-leave="ease-in duration-200"
                data-transition-leave-start="opacity-100 translate-y-0 sm:scale-100"
                data-transition-leave-end="opacity-0 translate-y-4 sm:translate-y-0"
            >
                <div class="flex-none w-fit cursor-pointer justify-end ml-auto" data-modal-target="closeButton" id="closeButton">x</div>

                <div class="flex flex-col gap-2">
                    <p class="font-bold">Title:</p>
                    <p id="item-title"></p>

                    <p class="font-bold">Description:</p>
                    <p id="item-description"></p>

                    <div class="flex gap-5">
                        <div><%= link_to "Edit", "", class:"link text-blue-700" , id:"item-edit-link" %></div>
                        <div><%= link_to "Delete", "", class:"link text-red-700" , id:"item-delete-link", data: {"turbo-method": :delete }, onclick:"alert('Are you sure?')" %></div>
                    </div>

                    <div class="flex gap-5">
                        <div><%= link_to "Assign Members To Item","" , class:"text-blue-700" , id:"item-assign-member-link" %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

